{
  "env": "node",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true
  },
  "typeRoots": ["./src/types"],
  "exclude": [
    "test",
    "node_modules",
    "lib"
  ]
}
